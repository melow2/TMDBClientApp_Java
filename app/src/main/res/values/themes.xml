<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style parent="Theme.AppCompat.Light.DarkActionBar" name="CustomActionBarTheme">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style parent="Theme.AppCompat.Light.DarkActionBar" name="MyActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style parent="TextAppearance.AppCompat.Widget.ActionBar.Title" name="MyActionBarTitleText">
        <item name="android:textColor">#0E0D0D</item>
    </style>

    <style parent="Widget.AppCompat.ActionBar.TabText" name="MyActionBarTabText">
        <item name="android:textSize">15sp</item>
    </style>

</resources>